@model LegalEntityModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Изменение ЮЛ</h2>
        </div>
        <div asp-validation-summary=All></div>
        <div class="mb-3">
            <label asp-for="Name">Название</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UcheriditelNomer">Учередитель</label>
            <select name="companyId">
            @foreach(var obj in Model)
            {
                <option value="@obj.">@comp.Name</option>
            }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Обновить</button>
        <a asp-controller="LegalEntity" asp-action="Index" class="btn btn-secondary" style="width:150px">Назад</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}