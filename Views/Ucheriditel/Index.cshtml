@model IEnumerable<UcheriditelModel>
@{
    ViewData["Title"]="Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class ="text-primary">Учередители</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Ucheriditel" asp-action="Creite" class="btn btn-primary">
               <i class="bi bi-bag-plus"></i> &nbsp; Создание Учередителя
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>
                ИНН
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Дата обновления
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Fio
                </td>
                <td width="20%">
                    @obj.Inn
                </td>
                <td width="20%">
                    @obj.AddDate
                </td>
                 <td width="20%">
                    @obj.UpdateDate
                </td>
                <td>
                    <div class="w-5 btn-group" role="group">
                        <a asp-controller="Ucheriditel" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                            <i class="bi-pencil-square"></i>  
                            Изменить
                        </a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Ucheriditel" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                            <i class="bi bi-trash"></i>
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
